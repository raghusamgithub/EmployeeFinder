  <script>
    // Sidebar toggle
    document.getElementById("toggleBtn").addEventListener("click", () => {
      document.getElementById("sidebar").classList.toggle("collapsed");
    });

    // Page switch
    document.querySelectorAll(".nav-links a").forEach(link => {
      link.addEventListener("click", e => {
        e.preventDefault();
        document.querySelectorAll(".nav-links a").forEach(l => l.classList.remove("active"));
        link.classList.add("active");
        document.querySelectorAll(".page").forEach(p => p.style.display = "none");
        document.getElementById(link.getAttribute("data-page")).style.display = "block";
      });
    });

    // License Chart
    const ctx = document.getElementById("licenseChart");
    const allocatedEl = document.getElementById("allocatedValue");
    const usageEl = document.getElementById("usageValue");
    const weeklyData = { labels: ["Aug 25-31", "Sep 1-7", "Oct 6-12", "Nov 10-16"], allocated: [8, 12, 14, 17], usage: [5, 9, 12, 15] };
    const dailyData = { labels: ["Mon", "Tue", "Wed", "Thu", "Fri"], allocated: [12, 13, 15, 16, 18], usage: [8, 9, 11, 13, 14] };
    const licenseChart = new Chart(ctx, {
      type: "line",
      data: {
        labels: weeklyData.labels,
        datasets: [
          { label: "Allocated Licenses", data: weeklyData.allocated, borderColor: "#f1c40f", backgroundColor: "rgba(241,196,15,0.2)", fill: true, tension: 0.4 },
          { label: "License Usage", data: weeklyData.usage, borderColor: "#9b59b6", backgroundColor: "rgba(155,89,182,0.2)", fill: true, tension: 0.4 }
        ]
      },
      options: {
        responsive: true,
        interaction: { mode: "index", intersect: false },
        plugins: { legend: { position: "top" } },
        onHover: (e, act) => {
          if (act.length) {
            const i = act[0].index;
            allocatedEl.textContent = licenseChart.data.datasets[0].data[i];
            usageEl.textContent = licenseChart.data.datasets[1].data[i];
          }
        }
      }
    });
    document.getElementById("weeklyBtn").onclick = () => updateChart(weeklyData, "weekly");
    document.getElementById("dailyBtn").onclick = () => updateChart(dailyData, "daily");
    function updateChart(data, type) {
      licenseChart.data.labels = data.labels;
      licenseChart.data.datasets[0].data = data.allocated;
      licenseChart.data.datasets[1].data = data.usage;
      licenseChart.update();
      document.getElementById("weeklyBtn").classList.toggle("active", type === "weekly");
      document.getElementById("dailyBtn").classList.toggle("active", type === "daily");
    }

    // Impact Chart
    const ctx2 = document.getElementById("impactChart").getContext("2d");
    const impactData = {
      weeklyLabels: ["Aug 25-31", "Sep 1-7", "Sep 8-14", "Sep 15-21"],
      dailyLabels: ["Mon", "Tue", "Wed", "Thu", "Fri"],
      datasets: {
        suggestions: { weekly: { s: [300,200,320,150], a: [100,80,90,120] }, daily: { s: [50,40,70,30,60], a: [20,25,30,15,40] } },
        loc: { weekly: { s: [500,400,650,300], a: [250,220,310,200] }, daily: { s: [80,60,100,50,90], a: [40,30,60,35,50] } }
      }
    };
    const impactChart = new Chart(ctx2, {
      type: "line",
      data: { labels: impactData.weeklyLabels, datasets: [
        { label: "Suggestions", data: impactData.datasets.suggestions.weekly.s, borderColor: "#F6BE00", fill: false, tension: 0.4 },
        { label: "Acceptances", data: impactData.datasets.suggestions.weekly.a, borderColor: "#9B5DE5", fill: false, tension: 0.4 }
      ]},
      options: { responsive: true, plugins: { legend: { position: "top" } } }
    });
    const viewType = document.getElementById("viewType");
    const tabs = document.querySelectorAll(".tab");
    viewType.addEventListener("change", updateImpact);
    tabs.forEach(tab => tab.addEventListener("click", () => { tabs.forEach(t => t.classList.remove("active")); tab.classList.add("active"); updateImpact(); }));
    function updateImpact() {
      const tab = document.querySelector(".tab.active").dataset.type;
      const type = viewType.value;
      const data = impactData.datasets[tab][type];
      impactChart.data.labels = type === "weekly" ? impactData.weeklyLabels : impactData.dailyLabels;
      impactChart.data.datasets[0].data = data.s;
      impactChart.data.datasets[1].data = data.a;
      impactChart.update();
    }

    // Acceptance & Retention Charts
    function generateData(startDate, endDate) {
      const data = [], labels = [];
      let cur = new Date(startDate);
      while (cur <= endDate) {
        labels.push(cur.toISOString().slice(5,10));
        data.push(Math.floor(Math.random()*40)+10);
        cur.setDate(cur.getDate()+1);
      }
      return { labels, data };
    }
    const aCtx = document.getElementById("acceptanceChart").getContext("2d");
    const rCtx = document.getElementById("retentionChart").getContext("2d");
    const acceptanceChart = new Chart(aCtx, { type: "bar", data: { labels: ["Aug25","Aug26","Aug27","Aug28","Aug29","Aug30"], datasets: [{ label: "Acceptance %", data: [30,25,40,20,35,28], backgroundColor: "#4CAF50" }] } });
    const retentionChart = new Chart(rCtx, { type: "bar", data: { labels: ["Aug25","Aug26","Aug27","Aug28","Aug29","Aug30"], datasets: [{ label: "Retention %", data: [20,18,25,15,22,19], backgroundColor: "#F39C12" }] } });
    document.getElementById("applyBtn").onclick = () => {
      const from = new Date(document.getElementById("fromDate").value);
      const to = new Date(document.getElementById("toDate").value);
      const aData = generateData(from,to);
      const rData = generateData(from,to);
      acceptanceChart.data.labels = aData.labels;
      acceptanceChart.data.datasets[0].data = aData.data;
      retentionChart.data.labels = rData.labels;
      retentionChart.data.datasets[0].data = rData.data;
      acceptanceChart.update();
      retentionChart.update();
    };

    // Developer Usage Insights
    const devCtx = document.getElementById("developerChart").getContext("2d");
    const devData = {
      languages: { labels: ["JavaScript","Python","C#","Java","TypeScript","C++"], data: [35,30,15,10,7,3], color: "#3498db" },
      editors: { labels: ["VS Code","IntelliJ","Visual Studio","Sublime","Vim"], data: [50,25,15,7,3], color: "#2ecc71" },
      completion: { labels: ["GitHub Copilot","TabNine","Intellicode","Kite"], data: [60,25,10,5], color: "#f39c12" },
      chat: { labels: ["ChatGPT","Gemini","Claude","Copilot Chat"], data: [70,15,10,5], color: "#9b59b6" }
    };
    const baseConfig = {
      type: "bar",
      data: { labels: devData.languages.labels, datasets: [{ label: "Usage (%)", data: devData.languages.data, backgroundColor: devData.languages.color }] },
      options: {
        indexAxis: "y",
        responsive: true,
        plugins: { legend: { display: false }, tooltip: { callbacks: { label: ctx => `${ctx.parsed.x}%` } } },
        scales: { x: { beginAtZero: true, ticks: { callback: val => val + "%" } }, y: { ticks: { color: "#333" } } }
      }
    };
    let developerChart = new Chart(devCtx, baseConfig);
    document.querySelectorAll("#devTabs .tab").forEach(tab => {
      tab.addEventListener("click", () => {
        document.querySelectorAll("#devTabs .tab").forEach(t => t.classList.remove("active"));
        tab.classList.add("active");
        const { labels, data, color } = devData[tab.dataset.type];
        developerChart.data.labels = labels;
        developerChart.data.datasets[0].data = data;
        developerChart.data.datasets[0].backgroundColor = color;
        developerChart.update();
      });
    });
  </script>
</body>
