  <script>
    // Sidebar toggle
    document.getElementById("toggleBtn").addEventListener("click", () => {
      document.getElementById("sidebar").classList.toggle("collapsed");
    });

    // Sidebar navigation page switching
    const links = document.querySelectorAll(".nav-links a");
    const pages = document.querySelectorAll(".page");

    links.forEach(link => {
      link.addEventListener("click", (e) => {
        e.preventDefault();
        links.forEach(l => l.classList.remove("active"));
        link.classList.add("active");
        const targetPage = link.getAttribute("data-page");
        pages.forEach(p => p.style.display = "none");
        document.getElementById(targetPage).style.display = "block";
      });
    });

    // Chart.js logic (only loads on Dashboard)
    const ctx = document.getElementById("licenseChart");
    const allocatedEl = document.getElementById("allocatedValue");
    const usageEl = document.getElementById("usageValue");

    const weeklyData = {
      labels: ["Aug 25-31", "Sep 01-07", "Oct 06-12", "Nov 10-16", "Dec 15-21", "Jan 19-25"],
      allocated: [8, 12, 14, 17, 18, 19],
      usage: [5, 9, 12, 15, 16, 18],
    };
    const dailyData = {
      labels: ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"],
      allocated: [12, 13, 15, 14, 16, 17, 18],
      usage: [8, 9, 11, 12, 13, 15, 14],
    };

    const licenseChart = new Chart(ctx, {
      type: "line",
      data: {
        labels: weeklyData.labels,
        datasets: [
          { label: "Allocated Licenses", data: weeklyData.allocated, borderColor: "#f1c40f", backgroundColor: "rgba(241,196,15,0.2)", tension: 0.4, fill: true },
          { label: "License Usage", data: weeklyData.usage, borderColor: "#9b59b6", backgroundColor: "rgba(155,89,182,0.2)", tension: 0.4, fill: true },
        ]
      },
      options: {
        responsive: true,
        interaction: { mode: "index", intersect: false },
        plugins: { legend: { position: "top" } },
        scales: { y: { beginAtZero: true } },
        onHover: (event, active) => {
          if (active.length) {
            const i = active[0].index;
            allocatedEl.textContent = licenseChart.data.datasets[0].data[i];
            usageEl.textContent = licenseChart.data.datasets[1].data[i];
          }
        }
      }
    });

    document.getElementById("weeklyBtn").onclick = () => updateChart(weeklyData, "weekly");
    document.getElementById("dailyBtn").onclick = () => updateChart(dailyData, "daily");

    function updateChart(data, type) {
      licenseChart.data.labels = data.labels;
      licenseChart.data.datasets[0].data = data.allocated;
      licenseChart.data.datasets[1].data = data.usage;
      licenseChart.update();
      allocatedEl.textContent = "-";
      usageEl.textContent = "-";
      document.getElementById("weeklyBtn").classList.toggle("active", type === "weekly");
      document.getElementById("dailyBtn").classList.toggle("active", type === "daily");
    }

    // Impact chart
    const ctx2 = document.getElementById("impactChart").getContext("2d");
    const impactData = {
      weeklyLabels: ["Aug 25-31", "Sep 1-7", "Sep 8-14", "Sep 15-21"],
      dailyLabels: ["Mon", "Tue", "Wed", "Thu", "Fri"],
      datasets: {
        suggestions: {
          weekly: { s: [300,200,320,150], a: [100,80,90,120] },
          daily: { s: [50,40,70,30,60], a: [20,25,30,15,40] }
        },
        loc: {
          weekly: { s: [500,400,650,300], a: [250,220,310,200] },
          daily: { s: [80,60,100,50,90], a: [40,30,60,35,50] }
        }
      }
    };

    const impactChart = new Chart(ctx2, {
      type: "line",
      data: {
        labels: impactData.weeklyLabels,
        datasets: [
          { label: "Suggestions", data: impactData.datasets.suggestions.weekly.s, borderColor: "#F6BE00", tension: 0.3, fill: false },
          { label: "Acceptances", data: impactData.datasets.suggestions.weekly.a, borderColor: "#9B5DE5", tension: 0.3, fill: false }
        ]
      },
      options: { responsive: true, plugins: { legend: { position: "top" } } }
    });

    const viewType = document.getElementById("viewType");
    const tabs = document.querySelectorAll(".tab");
    viewType.addEventListener("change", updateImpact);
    tabs.forEach(tab => tab.addEventListener("click", () => {
      tabs.forEach(t => t.classList.remove("active"));
      tab.classList.add("active");
      updateImpact();
    }));

    function updateImpact() {
      const tab = document.querySelector(".tab.active").dataset.type;
      const type = viewType.value;
      const data = impactData.datasets[tab][type];
      impactChart.data.labels = type === "weekly" ? impactData.weeklyLabels : impactData.dailyLabels;
      impactChart.data.datasets[0].data = data.s;
      impactChart.data.datasets[1].data = data.a;
      impactChart.data.datasets[0].label = tab === "loc" ? "Lines of Code" : "Suggestions";
      impactChart.update();
    }
  </script>
</body>
</html>
