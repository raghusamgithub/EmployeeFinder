  <script>
    // Sidebar Toggle
    document.getElementById("toggleBtn").addEventListener("click", () => {
      document.getElementById("sidebar").classList.toggle("collapsed");
    });

    // Page Navigation
    const links = document.querySelectorAll(".nav-links a");
    const pages = document.querySelectorAll(".page");
    links.forEach(link => {
      link.addEventListener("click", (e) => {
        e.preventDefault();
        links.forEach(l => l.classList.remove("active"));
        link.classList.add("active");
        const page = link.dataset.page;
        pages.forEach(p => p.style.display = "none");
        document.getElementById(page).style.display = "block";
      });
    });

    // License Chart
    new Chart(document.getElementById("licenseChart"), {
      type: "line",
      data: {
        labels: ["Aug", "Sep", "Oct", "Nov", "Dec"],
        datasets: [
          { label: "Allocated", data: [10,12,15,18,20], borderColor: "#f1c40f", fill: false },
          { label: "Usage", data: [8,10,12,17,19], borderColor: "#9b59b6", fill: false }
        ]
      },
      options: { responsive: true, plugins: { legend: { position: "top" } } }
    });

    // Impact Chart
    new Chart(document.getElementById("impactChart"), {
      type: "bar",
      data: {
        labels: ["Aug", "Sep", "Oct", "Nov", "Dec"],
        datasets: [
          { label: "Suggestions", data: [120,150,180,140,160], backgroundColor: "#F6BE00" },
          { label: "Acceptances", data: [80,100,140,120,130], backgroundColor: "#9B5DE5" }
        ]
      },
      options: { responsive: true, plugins: { legend: { position: "top" } } }
    });

    // Acceptance & Retention Charts
    const commonOptions = {
      type: "line",
      options: {
        responsive: true,
        plugins: { legend: { display: false } },
        scales: { y: { beginAtZero: true, max: 100 } }
      }
    };

    const acceptanceCtx = document.getElementById("acceptanceChart");
    const retentionCtx = document.getElementById("retentionChart");

    function generateData(start, end) {
      const data = [];
      const labels = [];
      let date = new Date(start);
      while (date <= end) {
        labels.push(date.toISOString().slice(5, 10));
        data.push(Math.floor(Math.random() * 40) + 10);
        date.setDate(date.getDate() + 1);
      }
      return { labels, data };
    }

    function renderCharts() {
      const start = new Date(document.getElementById("fromDate").value);
      const end = new Date(document.getElementById("toDate").value);
      const acc = generateData(start, end);
      const ret = generateData(start, end);

      new Chart(acceptanceCtx, {
        ...commonOptions,
        data: { labels: acc.labels, datasets: [{ label: "Acceptance Rate", data: acc.data, borderColor: "#FF6384", backgroundColor: "rgba(255,99,132,0.2)", fill: true }] }
      });

      new Chart(retentionCtx, {
        ...commonOptions,
        data: { labels: ret.labels, datasets: [{ label: "Suggestion Retention", data: ret.data, borderColor: "#36A2EB", backgroundColor: "rgba(54,162,235,0.2)", fill: true }] }
      });
    }

    renderCharts();

    document.getElementById("applyBtn").addEventListener("click", renderCharts);
  </script>
