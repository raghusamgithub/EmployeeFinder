  <!-- Main Content -->
  <div class="main-content">
    <!-- Dashboard Page -->
    <div id="dashboard" class="page">
      <div class="header"><h1>Analytics Dashboard</h1></div>
      <div class="chart-grid">
        <!-- Chart 1 -->
        <div class="chart-container">
          <div class="header">
            <h3>Allocated Licenses vs License Usage</h3>
            <div class="toggle-buttons">
              <button id="weeklyBtn" class="active">Weekly</button>
              <button id="dailyBtn">Daily</button>
            </div>
          </div>
          <canvas id="licenseChart"></canvas>
          <div class="value-display">
            <div class="allocated">Allocated: <span id="allocatedValue">-</span></div>
            <div class="usage">Usage: <span id="usageValue">-</span></div>
          </div>
        </div>

        <!-- Chart 2 -->
        <div class="chart-container">
          <div class="header">
